// In .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend Server",
      "type": "shell",
      "command": "python app.py",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/JGAM-Website/backend",
      }
    },
    {
      "label": "Start Frontend Server",
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/JGAM-Website/frontend",
      }
    },
    {
      "label": "Start Dev Environment",
      "dependsOn": [
        "Start Backend Server",
        "Start Frontend Server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}